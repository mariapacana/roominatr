<div id="create_survey">
	<p>Create a New Survey!</p>
<%= form_for @survey, :url => surveys_path do |f| %>
	<%= render :partial => 'shared/errors', :locals => {:object => @survey}, :layout => false %>
	<%= f.label :title, "Title" %>
	<%= f.text_field :title %><br>
	<%= f.label :category, "Category" %>
	<%= f.select :category, Category.all.collect {|c| c.name }%><br>
	<%= f.fields_for :questions do |q| %>
		<%= q.label :body, "Question" %>
		<%= q.text_field :body %><br>
		<%= q.fields_for :answers do |a| %>
			<%= a.label :text, "text" %>
			<%= a.text_field :text %><br>
			<%= a.label :weight, "weight" %>
		  <%= a.select :weight, options_for_select([-1,0,1]) %><br>
		<% end %>
	<%= f.submit %>
	<% end %>
<% end %>

</div>


