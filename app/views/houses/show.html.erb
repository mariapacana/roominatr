<div id="profile_container">
<p class="q_title"><%= @user.username %>'s House</p>






<%= image_tag @house.avatar.url, :id => 'house_pic' %><br>

<% if @user == current_user %>
  <%= link_to "Edit House", edit_user_houses_path(@user), :id =>"pro_nav" %>
  <%= link_to "Delete House", user_houses_path(@user), :method => :delete, :id =>"pro_nav" %>
<% end %>

<p class="q_title">Location</p>

<%= @house.location.address %><br>
<%= "#{@house.location.city}, #{@house.location.state}, #{@house.location.zip} "%><br>



<p class="q_title">Rent</p>
Rent: $<%= @house.rent %><br>
Deposit: $<%= @house.deposit %>

<p class="q_title">Description</p>
<%= @house.description %>

<p class="q_title">More Details</p>
<%= "#{@house.num_beds} bedrooms, #{@house.num_baths} bathrooms" %><br>
<%= if @house.dog then "Dogs are allowed" else "Dogs are not allowed" end %><br>
<%= if @house.cat then "Cats are allowed" else "Cats are not allowed" end %><br>
<%= if @house.smoking then "Smoking is allowed" else "Smoking isn't allowed" end %><br>
<%= if @house.background_check then "A background check is required" else "A background check isn't required" end %><br>
</div>