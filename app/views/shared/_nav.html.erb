<div id="nav">
	<ul>
		<li id = "logo"><%= link_to "ROOMINATR", root_path %></li>
		<span id="options">
			<% if logged_in? %>
				<% if current_user.admin %>
					<li><%= link_to "Make Survey", new_survey_path %></li>
				<% end %>
				<li><%= link_to "Search", users_path, :id => "link" %></li>
				<li><%= link_to "Your Profile", user_path(current_user),:id => "link"  %></li>
				<li><%= link_to "Sign Out", signout_path,:id => "link"  %></li>
			<% else %>
				<li><%= link_to "Sign In", signin_path, :id => "link"  %></li>
				<li><%= link_to "Sign Up", signup_path,:id => "link"  %></li>
			<% end %>
		</span>
	</ul>
</div>
