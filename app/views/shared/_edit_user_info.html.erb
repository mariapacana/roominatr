  <%= form_for @user do |f| %>
  <%= f.text_field :username, placeholder: "username" %><br>
  <%= f.text_field :gender, placeholder: "gender" %><br>
  <%= f.label :birthday, "Birthday" %>
  <%= f.date_select :birthday, { :start_year => 1930, :end_year => Time.now.year } %><br>
  <%= f.text_field :email, placeholder: "email" %><br>
  <%= f.password_field :password, placeholder: "password" %><br>
  <%= f.password_field :password_confirmation, placeholder: "password_confirmation" %><br>
  <%= f.submit %>
  <% end %>

