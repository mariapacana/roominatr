<div id="user_info_edit" class="profile_edit">
  <p id='name'>Update Personal Information</p>
  <%= form_for @user do |f| %>
    <%= render :partial => 'shared/errors', :locals => {:object => @user}, :layout => false %>
    <%= f.label :summary, "Summary" %><br>
    <%= f.text_area :summary, placeholder: "Tell us something about yourself.." %><br>
    <%= f.label :pets, "I own and/or am happy to live with:" %><br>
    <%= f.select :pets, options_for_select([nil, "Dogs", "Cats", "Any", "No Pets"], @user.pets ) %><br>
    <% if !@user.has_house %>
      Rent Preferences:
      <%= f.number_field :rent_pref_min, :placeholder => 'Min', :min => "0", :step => "100" %> -
      <%= f.number_field :rent_pref_max, :placeholder => 'Max', :min =>
      "0", :step => "100" %><br>
    <% end %>
    <%= f.label :weekend_activity, "On the weekend you'd find me:" %>
    <%= f.select :weekend_activity, options_for_select([nil, "At home reading or chillin'", "Outside hiking or climbing"], @user.weekend_activity) %><br>
    <%= f.label :food_preferences, "My diet is:" %>
    <%= f.select :food_preferences, options_for_select([nil,"Vegan", "Vegetarian","Pescetarian", "Gluten-Free","Paleo","I like all food"], @user.food_preferences) %><br>
    <p>Tell us your best roommate experience:</p>
    <%= f.text_area :best_roommate  %><br>
    <p>Tell us your worst roommate experience:</p>
    <%= f.text_area :worst_roommate %><br>
  <%= f.submit %>
  <% end %>
</div>
